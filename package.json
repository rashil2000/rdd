{
  "name": "rdd",
  "version": "1.0.0",
  "description": "Preview your `README.md` locally as it would appear on Github, with live updating. Useful for Readme Driven Development.",
  "author": "Lim Yuan Qing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/rdd.git"
  },
  "dependencies": {
    "chokidar": "^2.0.0",
    "ecstatic": "^3.2.0",
    "express": "^4.16.2",
    "github-markdown-css": "^2.10.0",
    "highlight.js": "^9.12.0",
    "lodash.template": "^4.4.0",
    "marked": "^0.3.12",
    "morphdom": "^2.3.3",
    "nopt": "^4.0.1",
    "opn": "^5.2.0",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "browserify": "^15.2.0",
    "prettier-standard": "^8.0.0",
    "uglify-js": "^3.3.9"
  },
  "bin": {
    "rdd": "bin/rdd"
  },
  "scripts": {
    "build": "browserify client/index.js | uglifyjs --compress --mangle > client/bundle.js",
    "lint": "prettier-standard bin/rdd client/index.js server/index.js --no-semi --single-quote --write",
    "start": "bin/rdd --open"
  },
  "keywords": [
    "live",
    "markdown",
    "md",
    "preview",
    "rdd",
    "readme"
  ],
  "preferGlobal": true
}
